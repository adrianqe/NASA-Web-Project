@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["AddProjectTitle"];
}
<style>
    .add-button { 
        background-color: #0033a0;
        color: white;
        border: none;
        padding: 5px 15px;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .add-button:hover {
            background-color: #00257a;
        }

    .card { 
        border-radius: 8px; 
        border: 1px solid #dee2e6;
    }

    .card-header { 
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        font-weight: bold;
        text-align: center;
        padding: 10px 12px; 
    }

    .card-body { 
        padding: 15px;
    }

    .form-label { 
        font-weight: 500;
        margin-bottom: .5rem;
    }

    .select-module-container {
        display: flex;
        align-items: center;
    }

    .select-module-label {
        font-weight: bold;
        white-space: nowrap;
        margin-bottom: 0; 
        margin-right: 0.5rem;
    }

    .select-module { 
        width: auto; 
        min-width: 200px;
    }

    .nomenclature-row { 
        min-height: 38px; 
    }

    .nomenclature-icon {
        width: 35px; 
        text-align: center;
        flex-shrink: 0; 
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .nomenclature-text {
        margin-left: 0.5rem; 
        padding-left: 0.5rem;
        border-left: 1px solid #dee2e6; 
        flex-grow: 1;
        text-align: left;
    }

    .list-container {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        overflow: hidden;
        height: 100%; 
        display: flex;
        flex-direction: column;
    }

    .list-header {
        text-align: center;
        font-weight: bold;
        padding: 10px;
        border-bottom: 1px solid #dee2e6;
        background-color: #f8f9fa; 
    }

    .list-body {
        padding: 15px;
        flex-grow: 1;
        overflow-y: auto; 
    }

    .list-row2 {
        display: flex;
        border: 1px solid #dee2e6;
        border-bottom: none; 
        border-top-left-radius: var(--bs-border-radius); 
        border-top-right-radius: var(--bs-border-radius);
        overflow: hidden;
        background-color: #f8f9fa;
    }

    .list-row {
        display: flex;
        border-width: 0 1px 1px 1px;
        border-style: solid;
        border-color: #dee2e6;
        border-bottom-left-radius: var(--bs-border-radius); 
        border-bottom-right-radius: var(--bs-border-radius);
        overflow: hidden;
    }

        .list-row input.form-control {
            border: none; 
            border-radius: 0; 
            text-align: center;
            min-width: 0;
            flex: 1;
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }
            .list-row input.form-control:not(:last-child) {
                border-right: 1px solid #dee2e6;
            }

    .list-cell {
        flex: 1;
        padding: 8px;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 1px solid #dee2e6;
        min-height: 38px;
    }

        .list-cell:last-child {
            border-right: none;
        }

    .back-button {
        border: 1px solid #e60000;
        color: #e60000;
        background-color: transparent;
        padding: 5px 15px;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background-color: #e60000;
            color: white;
        }
</style>
<div class="container mt-4">
    <button type="button" class="back-button" style="float: left;" onclick="window.history.back()">
        @Localizer["Back"]
    </button>
    <div class="row mb-4 align-items-stretch">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header text-center">@Localizer["Nomenclature"]</div>
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center border rounded p-1 mb-1 nomenclature-row">
                        <div class="nomenclature-icon"><img src="~/images/calendar.png" alt="Calendar" width="20" /></div>
                        <div class="nomenclature-text">@Localizer["Date"]</div>
                    </div>
                    <div class="d-flex align-items-center border rounded p-1 mb-1 nomenclature-row">
                        <div class="nomenclature-icon">$</div>
                        <div class="nomenclature-text">@Localizer["Amount"]</div>
                    </div>
                    <div class="d-flex align-items-center border rounded p-1 mb-1 nomenclature-row">
                        <div class="nomenclature-icon"><img src="~/images/label.png" alt="Type" width="15" /></div>
                        <div class="nomenclature-text">@Localizer["Project"]</div>
                    </div>
                    <div class="d-flex align-items-center border rounded p-1 nomenclature-row">
                        <div class="nomenclature-icon"><i class="fas bi-person-circle"></i></div> <div class="nomenclature-text">@Localizer["User"]</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex justify-content-center align-items-center">
            <div class="select-module-container">
                <label class="select-module-label">@Localizer["Module:"]</label>
                <select class="select-module form-select">
                    <option value="" selected disabled>@Localizer["-- Select a Module --"]</option>
                    <option>@Localizer["Space Missions"]</option>
                    <option>@Localizer["Experiments"]</option>
                    <option>@Localizer["Research Programs"]</option>
                </select>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header text-center">
                    @Localizer["Information"]
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Initial budget"]</label>
                        <input type="text" class="form-control" placeholder="$0,00">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Budget balance"]</label>
                        <input type="text" class="form-control" placeholder="$0,00">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-1 align-items-stretch">
        <div class="col-md-4">
            <div class="list-container">
                <div class="list-header">
                    @Localizer["Adds list"]
                </div>
                <div class="list-body">
                    <div class="list-row2">
                        <div class="list-cell"><i class="fas bi-person-circle"></i></div>
                        <div class="list-cell">$</div>
                    </div>
                    <div class="list-row mb-3">
                        <input class="form-control" />
                        <input class="form-control" />
                    </div>

                    <div class="list-row2">
                        <div class="list-cell"><i class="fas bi-person-circle"></i></div>
                        <div class="list-cell">$</div>
                    </div>
                    <div class="list-row mb-3">
                        <input class="form-control" />
                        <input class="form-control" />
                    </div>

                    <div class="list-row2">
                        <div class="list-cell"><i class="fas bi-person-circle"></i></div>
                        <div class="list-cell">$</div>
                    </div>
                    <div class="list-row">
                        <input class="form-control" />
                        <input class="form-control" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="list-container">
                <div class="list-header">
                    @Localizer["Debits list"]
                </div>
                <div class="list-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="list-row2">
                                <div class="list-cell"><img src="~/images/calendar.png" alt="Calendar" width="20" /></div>
                                <div class="list-cell">$</div>
                                <div class="list-cell"><i class="fas bi-person-circle"></i></div>
                            </div>
                            <div class="list-row">
                                <input class="form-control" /> <input class="form-control" /> <input class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="list-row2">
                                <div class="list-cell"><img src="~/images/calendar.png" alt="Calendar" width="20" /></div>
                                <div class="list-cell">$</div>
                                <div class="list-cell"><i class="fas bi-person-circle"></i></div>
                            </div>
                            <div class="list-row">
                                <input class="form-control" /> <input class="form-control" /> <input class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="list-row2">
                                <div class="list-cell"><img src="~/images/calendar.png" alt="Calendar" width="20" /></div>
                                <div class="list-cell">$</div>
                                <div class="list-cell"><i class="fas bi-person-circle"></i></div>
                            </div>
                            <div class="list-row">
                                <input class="form-control" /> <input class="form-control" /> <input class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="list-row2">
                                <div class="list-cell"><img src="~/images/calendar.png" alt="Calendar" width="20" /></div>
                                <div class="list-cell">$</div>
                                <div class="list-cell"><i class="fas bi-person-circle"></i></div>
                            </div>
                            <div class="list-row">
                                <input class="form-control" /> <input class="form-control" /> <input class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
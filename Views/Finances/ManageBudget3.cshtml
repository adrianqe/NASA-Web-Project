    }

    .select-module-label {
        font-weight: bold;
        white-space: nowrap;
        margin-bottom: 0;
        margin-right: 0.5rem;
    }

    .select-module {
        width: auto;
        min-width: 200px;
    }

    .nomenclature-row {
        min-height: 38px;
    }

    .nomenclature-icon {
        width: 35px;
        text-align: center;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .nomenclature-text {
        margin-left: 0.5rem;
        padding-left: 0.5rem;
        border-left: 1px solid #dee2e6;
        flex-grow: 1;
        text-align: left;
    }

    .list-container {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .list-header {
        text-align: center;
        font-weight: bold;
        padding: 10px;
        border-bottom: 1px solid #dee2e6;
        background-color: #f8f9fa;
    }

    .list-body {
        padding: 15px;
        flex-grow: 1;
        overflow-y: auto;
    }

    .list-row2 {
        display: flex;
        border: 1px solid #dee2e6;
        border-bottom: none;
        border-top-left-radius: var(--bs-border-radius);
        border-top-right-radius: var(--bs-border-radius);
        overflow: hidden;
        background-color: #f8f9fa;
    }

    .list-row {
        display: flex;
        border-width: 0 1px 1px 1px;
        border-style: solid;
        border-color: #dee2e6;
        border-bottom-left-radius: var(--bs-border-radius);
        border-bottom-right-radius: var(--bs-border-radius);
        overflow: hidden;
    }

        .list-row input.form-control {
            border: none;
            border-radius: 0;
            text-align: center;
            min-width: 0;
            flex: 1;
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

            .list-row input.form-control:not(:last-child) {
                border-right: 1px solid #dee2e6;
            }

    .list-cell {
        flex: 1;
        padding: 8px;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 1px solid #dee2e6;
        min-height: 38px;
    }

        .list-cell:last-child {
            border-right: none;
        }

    .back-button {
        border: 1px solid #e60000;
        color: #e60000;
        background-color: transparent;
        padding: 5px 15px;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
        margin-bottom: 15px;
    }

        .back-button:hover {
            background-color: #e60000;
            color: white;
        }

    .project-card {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        height: 100%;
    }

    .project-image {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-radius: 5px;
    }

    .project-info {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .project-description {
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 10px;
        margin-top: 10px;
        min-height: 100px;
    }

    .metadata-icons {
        display: flex;
        gap: 15px;
        margin-bottom: 10px;
    }

    .metadata-icon {
        display: flex;
        align-items: center;
        gap: 5px;
    }
</style>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ResearchProgramsTitle"];
}

<style>
    .mission-card {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        height: 270px;
        position: relative;
        margin-bottom: 20px;
    }

    .mission-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .mission-image {
        height: 200px;
        width: 100%;
        object-fit: contain;
        object-position: center;
        display: block;
    }

    .mission-title-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 15px;
        background-color: #f8f9fa;
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 70px;
    }

    .mission-title {
        font-size: 16px;
        font-weight: 600;
        margin: 0;
    }

    .btn-manage {
        font-size: 14px;
        color: #0033a0;
        border: 1px solid #0033a0;
        background-color: transparent;
        padding: 4px 10px;
        border-radius: 5px;
    }

    .btn-manage:hover {
        background-color: #0033a0;
        color: white;
    }

    .justify-center {
        justify-content: center;
    }

    .last-row-item {
        margin-left: 10px;
        margin-right: 10px;
    }

    .back-button {
        border: 1px solid #e60000;
        color: #e60000;
        background-color: transparent;
        padding: 5px 15px;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background-color: #e60000;
            color: white;
        }
</style>
<div class="container mt-5">
    <h1 class="text-center mb-5">@Localizer["SelectExperiment"]</h1>

    <button class="back-button mb-4" onclick="window.location.href='/Dashboard/Modules'">
        @Localizer["Back"]
    </button>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="mission-card" onclick="viewMission('SimulatingLifeOnMars')">
                <img src="https://assets.mockflow.com/app/wireframepro/company/C1cfce0309136452fb8bfc82060887827/projects/MQq8G1l5Mrb/images/M2fa36b3744db891be9ce9cbe595dcefd1742628439939" class="mission-image" alt="Simulating life on Mars">
                <div class="mission-title-container">
                    <h3 class="mission-title">@Localizer["Simulating life on Mars"]</h3>
                    <i class="bi bi-arrow-right module-arrow"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="mission-card" onclick="viewMission('Moonwalks')">
                <img src="https://assets.mockflow.com/app/wireframepro/company/C1cfce0309136452fb8bfc82060887827/projects/MQq8G1l5Mrb/images/M897a6a34d05569d726a633431664674a1742626166636" class="mission-image" alt="Moonwalks">
                <div class="mission-title-container">
                    <h3 class="mission-title">@Localizer["Moonwalks"]</h3>
                    <i class="bi bi-arrow-right module-arrow"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="mission-card" onclick="viewMission('RoboticOperations')">
                <img src="https://assets.mockflow.com/app/wireframepro/company/C1cfce0309136452fb8bfc82060887827/projects/MQq8G1l5Mrb/images/M23dde5f4e60cdb0956a93a58ca2ea1b01742627974279" class="mission-image" alt="Robotic Operations">
                <div class="mission-title-container">
                    <h3 class="mission-title">@Localizer["Robotic Operations"]</h3>
                    <i class="bi bi-arrow-right module-arrow"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex last-row-item mt-4">
        <button class="btn-manage" onclick="window.location.href='/Experiments/ManageExperiments'">
            @Localizer["Manage"]
        </button>
    </div>

    @section Scripts {
        <script>
            function viewMission(missionName) {
                window.location.href = `/Experiments/${missionName}`;
            }
        </script>
    }

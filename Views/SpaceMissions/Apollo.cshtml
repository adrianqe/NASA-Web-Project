@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Apollo";
}
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                height: 500,
                events: [
                    { title: 'Launch Apollo 11', date: '1969-07-16' },
                    { title: 'Moon Landing', date: '1969-07-20' },
                    { title: 'Return to Earth', date: '1969-07-24' }
                ]
            });
            calendar.render();
        });

                < !--Bootstrap CSS-- >
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
                <!-- Bootstrap JS Bundle con Popper -->
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    </script>
}

<style>
    .apollo-header {
        text-align: center;
        padding: 50px 20px;
    }

        .apollo-header h1 {
            font-size: 2.8rem;
            font-weight: bold;
        }

        .apollo-header blockquote {
            font-style: italic;
            color: #555;
            margin: 20px auto;
            max-width: 600px;
        }

        .apollo-header p {
            font-size: 1.1rem;
            margin: 5px 0;
        }

    .apollo-stats {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-top: 30px;
    }

    .stat-box {
        text-align: center;
        font-size: 1.2rem;
    }

        .stat-box strong {
            display: block;
            font-size: 2.5rem;
            color: #e60000;
        }

    .apollo-section {
        padding: 60px 20px;
        max-width: 800px;
        margin: auto;
    }

        .apollo-section h2 {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .apollo-section p {
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .apollo-section a {
            display: inline-block;
            margin-top: 15px;
        }

    .crew-section {
        padding: 40px 20px;
        text-align: center;
    }

        .crew-section h2 {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 30px;
        }

    .crew-card {
        display: flex;
        max-width: 800px;
        margin: auto;
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 20px;
    }

        .crew-card img {
            max-width: 100%;
            border-radius: 10px;
        }

        .crew-card .crew-info {
            text-align: left;
            padding-left: 20px;
        }

            .crew-card .crew-info h3 {
                font-size: 1.4rem;
                margin-bottom: 10px;
            }

            .crew-card .crew-info p {
                margin: 3px 0;
            }

    #calendar {
        height: 500px;
    }

    .back-button {
        border: 1px solid #e60000;
        color: #e60000;
        background-color: transparent;
        padding: 5px 15px;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background-color: #e60000;
            color: white;
        }
</style>

<div class="apollo-header">
    <h1>@Localizer["Project Apollo"]</h1>
    <!-- Align button to the left -->

    <button type="button" class="back-button" style="float: left;" onclick="window.history.back()">  
       @Localizer["Back"]  
    </button>

    <blockquote>“@Localizer["That's one small step"]”</blockquote>

    <p>
        @Localizer["Primary goal"]:
        @Localizer["Landing humans on the Moon and returning them safely to Earth."]
    </p>
    <p><strong>@Localizer["Status"]:</strong> @Localizer["Finished"]</p>
    <p><strong>@Localizer["Program duration"]:</strong> 1962–1972</p>

    <div class="apollo-stats">
        <div class="stat-box">
            <strong>6</strong>
            @Localizer["Lunar Landing Missions"]
        </div>
        <div class="stat-box">
            <strong>11</strong>
            @Localizer["Crewed Missions"]
        </div>
    </div>
</div>

<div class="apollo-section">
    <h2>@Localizer["Spacecraft & Technology"]</h2>
    <p>
        @Localizer["The flight mode"]
    </p>
    <p>
        @Localizer["Apollo was"]
    </p>
    <a href="https://www.nasa.gov/wp-content/uploads/static/history/afj/pdf/apollo-csm-news-reference-1968.pdf?emrc=67fed29c37480" target="_blank">@Localizer["View the Apollo Spacecraft Reference book"]</a>
</div>

<div class="crew-section">
    <h2>@Localizer["Crew"]</h2>

    <div id="crewCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="crew-card">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="https://assets.mockflow.com/app/wireframepro/company/C1cfce0309136452fb8bfc82060887827/projects/MQq8G1l5Mrb/images/Md41e783edc430e3f25cabcceb8970ecc1742504670516" alt="Neil A. Armstrong" class="img-fluid" />
                        </div>
                        <div class="col-md-8">
                            <div class="crew-info">
                                <h3>Neil A. Armstrong</h3>
                                <p>@Localizer["Research pilot, astronaut"]</p>
                                <p>@Localizer["Apollo 11 Mission commander"]</p>
                                <p>
                                    @Localizer["Time in space"]:
                                    @Localizer["8 days and 14 hours"]
                                </p>
                                <p>
                                    @Localizer["Status"]:
                                    @Localizer["Freeze"]
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Puedes agregar más elementos carousel-item aquí para más miembros de la tripulación -->
            <div class="carousel-item">
                <div class="crew-card">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="https://images-assets.nasa.gov/image/S69-31743/S69-31743~large.jpg?w=1535&h=1920&fit=crop&crop=faces%2Cfocalpoint" alt="Buzz Aldrin" class="img-fluid" />
                        </div>
                        <div class="col-md-8">
                            <div class="crew-info">
                                <h3>Buzz Aldrin</h3>
                                <p>@Localizer["Lunar Module Pilot"]</p>
                                <p>@Localizer["Apollo 11 Mission pilot"]</p>
                                <p>
                                    @Localizer["Time in space"]:
                                    @Localizer["12 days and 1 hour"]
                                </p>
                                <p>
                                    @Localizer["Status"]:
                                    @Localizer["Freeze"]
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Puedes agregar más elementos carousel-item aquí para más miembros de la tripulación -->
            <div class="carousel-item">
                <div class="crew-card">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="https://images-assets.nasa.gov/image/S69-31742/S69-31742~large.jpg?w=1536&h=1920&fit=crop&crop=faces%2Cfocalpoint" alt="Michael Collins" class="img-fluid" />
                        </div>
                        <div class="col-md-8">
                            <div class="crew-info">
                                <h3>Michael Collins</h3>
                                <p>@Localizer["Command module pilot"]</p>
                                <p>@Localizer["Apollo 11 Mission pilot"]</p>
                                <p>
                                    @Localizer["Time in space"]:
                                    @Localizer["11 days and 2 hours"]
                                </p>
                                <p>
                                    @Localizer["Status"]:
                                    @Localizer["Freeze"]
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#crewCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#crewCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- Nueva sección del calendario y recursos -->
<div class="row justify-content-center">
    <div class="col-12 text-center mb-4">
        <h2>@Localizer["Chronogram"]</h2>
    </div>
    <div class="col-md-6">
        <input type="date" class="form-control mb-3" value="2025-07-01" />
        <!-- FullCalendar CSS -->
        <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet" />
        <div id="calendar"></div>
        <!-- FullCalendar JS -->
        <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.js"></script>
    </div>
    <div class="col-md-4">
        <h5>@Localizer["Add resources"]</h5>
        <textarea class="form-control mb-2" placeholder="@Localizer["Example Text"]"></textarea>
        <label class="form-label">@Localizer["Upload file"]</label>
        <input type="file" class="form-control mb-3" />
        <button class="btn btn-primary">@Localizer["Add"]</button>
    </div>
</div>

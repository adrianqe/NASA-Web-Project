@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["AddProjectTitle"];
}
<style>
    /* Estilos comunes */
    .back-button {
        border: 1px solid #e60000;
        color: #e60000;
        background-color: transparent;
        padding: 5px 15px;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background-color: #e60000;
            color: white;
        }

    .add-button {
        background-color: #0033a0;
        color: white;
        border: none;
        padding: 5px 15px;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .add-button:hover {
            background-color: #00257a;
        }

    .search-container {
        position: relative;
        width: 100%;
    }

    .search-input {
        width: 100%;
        padding: 8px 15px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding-left: 35px;
    }

    .search-icon {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
    }

    .project-list {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        margin-top: 20px;
    }

    .project-item {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        background-color: #fff;
    }

    .project-logo {
        max-width: 150px;
        max-height: 150px;
        object-fit: contain;
    }

    .input-box {
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 10px;
        height: 80px;
        overflow: auto;
    }

    .user-box {
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 5px;
        display: flex;
        align-items: center;
        margin-bottom: 5px;
    }

    .budget-input {
        width: 100%;
        padding: 6px 12px;
        border: 1px solid #ced4da;
        border-radius: 5px;
    }

    .select-button {
        background-color: #0033a0;
        color: white;
        border: none;
        padding: 5px 15px;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .select-button:hover {
            background-color: #00257a;
        }

    .icon-box {
        width: 30px;
        text-align: center;
        margin-right: 5px;
    }

    .freeze-button {
        background-color: #e60000;
        color: white;
        border: none;
        padding: 5px 15px;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .freeze-button:hover {
            background-color: #c00000;
        }

    .user-list-container, .debit-list-container {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        margin-top: 15px;
    }

    .list-title {
        font-weight: bold;
        padding: 10px;
        text-align: center;
        border-bottom: 1px solid #dee2e6;
        margin-bottom: 15px;
    }

    .list-item {
        border: 1px solid #dee2e6;
        border-radius: 5px;
        margin-bottom: 10px;
        display: flex;
    }

    .list-cell {
        padding: 10px;
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 1px solid #dee2e6;
    }

        .list-cell:last-child {
            border-right: none;
        }

    .filters-icon {
        cursor: pointer;
        margin-left: 10px;
    }

    .info-label {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .info-body {
        padding: 15px;
    }

    .list-container {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        overflow: hidden;
        margin-top: 20px;
    }

    .list-header {
        text-align: center;
        font-weight: bold;
        padding: 10px;
        border-bottom: 1px solid #dee2e6;
    }

    .list-body {
        padding: 15px;
    }

    .add-user-button {

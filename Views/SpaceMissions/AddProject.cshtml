    }

        .add-user-button:hover {
            background-color: #00257a;
        }

    .list-row {
        display: flex;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        margin-bottom: 10px;
        overflow: hidden;
    }

    .list-row2 {
        display: flex;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        margin-bottom: 0px;
        overflow: hidden;
    }


@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["InvestigatorsInCharge"];
}

<style>
    .card-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        display: flex;
        margin-bottom: 20px;
    }

    .investigator-img {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 5px;
    }

    .investigator-info {
        padding-left: 30px;
        flex: 1;
    }

    .info-row {
        display: flex;
        margin-bottom: 20px;
    }

    .info-label {
        font-weight: bold;
        font-size: 18px;
        width: 180px;
    }

    .info-value {
        font-size: 18px;
    }

    .page-title {
        text-align: center;
        margin: 30px 0;
        font-size: 36px;
        font-weight: bold;
    }

    .back-button {
        border: 1px solid #e60000;
        color: #e60000;
        background-color: transparent;
        padding: 5px 15px;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.3s ease;
        margin-bottom: 20px;
        display: inline-block;
    }

    .back-button:hover {
        background-color: #e60000;
        color: white;
    }
</style>

<div class="container">
    <h1 class="page-title">@Localizer["Investigators in charge"]</h1>
    
    <button class="back-button" onclick="window.location.href='/ResearchPrograms/SpaceX'">
        @Localizer["Back"]
    </button>

    <div class="card-container">
        <img src="https://assets.mockflow.com/app/wireframepro/company/C1cfce0309136452fb8bfc82060887827/projects/MQq8G1l5Mrb/images/M8adaa27fa1e2a04b96b268eccbb0acfd1743112966286" class="investigator-img" alt="Elon Musk">

        <div class="investigator-info">
            <div class="info-row">
                <div class="info-label">@Localizer["Name:"]</div>
                <div class="info-value">Elonk Reeve Musk</div>
            </div>

            <div class="info-row">
                <div class="info-label">@Localizer["Afiliation:"]</div>
                <div class="info-value">SpaceX</div>
            </div>

            <div class="info-row">
                <div class="info-label">@Localizer["Specialization:"]</div>
                <div class="info-value">@Localizer["Aerospace Engineering"]</div>
            </div>
        </div>
    </div>

    <div class="card-container">
        <div class="investigator-info">
            <div class="info-row">
                <div class="info-label">@Localizer["Name:"]</div>
                <div class="info-value">Kathy Lueders</div>
            </div>

            <div class="info-row">
                <div class="info-label">@Localizer["Afiliation:"]</div>
                <div class="info-value">NASA</div>
            </div>

            <div class="info-row">
                <div class="info-label">@Localizer["Specialization:"]</div>
                <div class="info-value">@Localizer["Space Operations"]</div>
            </div>
        </div>

        <img src="https://assets.mockflow.com/app/wireframepro/company/C1cfce0309136452fb8bfc82060887827/projects/MQq8G1l5Mrb/images/Mc55607096fb7f39ddf04e0f87ed01ad81743113135501" class="investigator-img" alt="Kathy Lueders">
    </div>
</div>
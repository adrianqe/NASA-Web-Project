@{
    ViewData["Title"] = "Home Page";
    var lang = Context.Request.Cookies["lang"] ?? "en";

    string titulo = lang switch
    {
        "es" => "Gestión de Proyectos NASA",
        "fr" => "Gestion de projets NASA",
        _ => "NASA Project Management"
    };

    string valores = lang switch
    {
        "es" => "Valores",
        "fr" => "Valeurs",
        _ => "Values"
    };

    string misionTitulo = lang == "es" ? "Misión" :
                          lang == "fr" ? "Mission" :
                          "Mission";

    string visionTitulo = lang == "es" ? "Visión" :
                          lang == "fr" ? "Vision" :
                          "Vision";

    string misionTexto = lang switch
    {
        "es" => "La NASA explora lo desconocido en el aire y el espacio, innova para el beneficio de la humanidad e inspira al mundo a través del descubrimiento.",
        "fr" => "La NASA explore l'inconnu dans l'air et l'espace, innove pour le bénéfice de l'humanité et inspire le monde par la découverte.",
        _ => "NASA explores the unknown in air and space, innovates for the benefit of humanity, and inspires the world through discovery."
    };

    string visionTexto = lang switch
    {
        "es" => "La NASA se esfuerza por alcanzar nuevas alturas y revelar lo desconocido, extendiendo la presencia humana más allá de la Tierra para beneficiar a toda la humanidad.",
        "fr" => "La NASA s'efforce d'atteindre de nouveaux sommets et de révéler l'inconnu, étendant la présence humaine au-delà de la Terre pour le bien de toute l'humanité.",
        _ => "NASA strives to reach new heights and reveal the unknown, extending human presence beyond Earth to benefit all humankind."
    };

    string[] valoresLista = lang switch
    {
        "es" => new[] { "Seguridad", "Integridad", "Inclusión", "Trabajo en equipo", "Excelencia" },
        "fr" => new[] { "Sécurité", "Intégrité", "Inclusion", "Travail d'équipe", "Excellence" },
        _ => new[] { "Safety", "Integrity", "Inclusion", "Teamwork", "Excellence" }
    };
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold">@titulo</h1>

    <!-- Valores con guiones -->
    <section class="mt-5">
        <h1 class="mb-4 fw-bold">@valores</h1>
        <div class="d-flex justify-content-center align-items-center flex-wrap gap-5 fs-2">
            @for (int i = 0; i < valoresLista.Length; i++)
            {
                <span class="value">@valoresLista[i]</span>
                @if (i < valoresLista.Length - 1)
                {
                    <span class="dash text-danger fs-1">—</span>
                }
            }
        </div>
    </section>

    <!-- Misión y Visión -->
    <section class="mt-5 row justify-content-center gap-5">
        <div class="col-md-4">
            <h4 class="fw-bold fs-3">@misionTitulo</h4>
            <p class="text-muted text-justify fs-5">@misionTexto</p>
        </div>
        <div class="col-md-4">
            <h4 class="fw-bold fs-3">@visionTitulo</h4>
            <p class="text-muted text-justify fs-5">@visionTexto</p>
        </div>
    </section>
</div>
